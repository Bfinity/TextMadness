<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/email_password_fields"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <EditText
        android:id="@+id/email_request_field"
        android:hint="@string/user_email_request"
        android:inputType="textEmailAddress"
        android:textColorHint="@color/teal"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/text_padding"
        android:background="@drawable/generate_button"/>

    <EditText
        android:id="@+id/password_request_field"
        android:hint="@string/user_password_request"
        android:inputType="textPassword"
        android:textColorHint="@color/teal"
        android:gravity="center"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:padding="@dimen/text_padding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/generate_button"/>

    <Button
        android:id="@+id/done_button"
        android:text="@string/done_button"
        android:background="@drawable/generate_button"
        android:textColor="@color/teal"
        android:layout_marginTop="25dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>



</LinearLayout>