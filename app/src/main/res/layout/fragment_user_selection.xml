<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.bunniesarecute.admin.textmadness.UserAccount.UserSelectionScreen">


    <Button
        android:id="@+id/log_in_button"

        android:text="@string/log_in_button_text"
        android:textColor="@color/light_teal"
        android:textSize="20dp"


        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"

        android:padding="20dp"
        android:layout_margin="10dp"

        android:background="@drawable/generate_button"

        />

    <Button
        android:id="@+id/sign_up_button"

        android:text="@string/sign_up_button_text"
        android:textColor="@color/light_teal"
        android:textSize="20dp"

        android:layout_below="@id/log_in_button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"

        android:padding="20dp"
        android:layout_margin="10dp"

        android:background="@drawable/generate_button"

        />



</RelativeLayout>
